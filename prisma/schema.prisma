model User {
  id             Int            @id @default(autoincrement())
  name           String
  email          String         @unique
  hashedPassword String
  role           String
  profilePicture String?
  comments       Comment[]
  favorites      FavoritePost[]
}

model Post {
  id             Int            @id @default(autoincrement())
  title          String
  body           String
  dateOfCreation String
  dateOfUpdation String
  topic          String
  hashtags       String
  views          Int
  likesAmount    Int
  imageUrl       String?
  comments       Comment[]
  favorites      FavoritePost[]
}

model FavoritePost {
  id     Int  @id @default(autoincrement())
  postId Int
  userId Int
  post   Post @relation(fields: [postId], references: [id])
  user   User @relation(fields: [userId], references: [id])
}

model Comment {
  id             Int      @id @default(autoincrement())
  postId         Int
  userId         Int
  body           String
  likesCount     Int
  dateOfCreation DateTime @default(now())
  post           Post     @relation(fields: [postId], references: [id])
  user           User     @relation(fields: [userId], references: [id])
}
