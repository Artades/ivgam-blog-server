generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Favorites {
  id               Int            @id @default(autoincrement())
  userId           Int
  favoriteProducts FavoritePost[]
  user             User           @relation(fields: [userId], references: [id])
}

model FavoritePost {
  id            Int       @id @default(autoincrement())
  favoritesId   Int
  articleNumber Int
  favorites     Favorites @relation(fields: [favoritesId], references: [id])
}

model User {
  id             Int         @id @default(autoincrement())
  name           String
  email          String      @unique
  hashedPassword String
  favorites      Favorites[]
}

model Post {
  id             Int      @id @default(autoincrement())
  title          String
  body           String
  dateOfCreation String
  dateOfUpdation String
  topic          String
  hashtags       String[]
  views          Int
  likesAmount    Int
}
